doctype html
html
    head
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        .container
            h1 HubSpot Contacts
            
            .table-container
                table.contacts-table
                    thead
                        tr
                            th ID
                            th First Name
                            th Last Name
                            th Email
                            th Phone
                            th Company
                            th Job Title
                            th Created Date
                    tbody
                        tr
                            td(colspan="8") Loading contacts...
            
            .actions
                a.btn.btn-primary(href="/update-cobj") Add to this table